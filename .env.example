# ============================================
# SAGE ADK Configuration Example
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Agent Configuration
# ============================================
ADK_AGENT_NAME=my-agent
ADK_AGENT_DESCRIPTION="My AI Agent"
ADK_AGENT_VERSION=1.0.0

# ============================================
# Server Configuration
# ============================================
ADK_SERVER_HOST=0.0.0.0
ADK_SERVER_PORT=8080
ADK_SERVER_TIMEOUT=30s
ADK_SERVER_MAX_BODY_SIZE=10MB

# ============================================
# Protocol Configuration
# ============================================
# Options: a2a | sage | auto
ADK_PROTOCOL_MODE=auto

# ============================================
# A2A Protocol Settings
# ============================================
A2A_PROTOCOL_VERSION=0.2.2

# Storage Backend
# Options: memory | redis | postgres
A2A_STORAGE_TYPE=memory
A2A_STORAGE_TTL=1h
A2A_MAX_HISTORY_LENGTH=100

# Redis Configuration (when A2A_STORAGE_TYPE=redis)
A2A_REDIS_URL=redis://localhost:6379
A2A_REDIS_PASSWORD=
A2A_REDIS_DB=0
A2A_REDIS_POOL_SIZE=10

# PostgreSQL Configuration (when A2A_STORAGE_TYPE=postgres)
A2A_POSTGRES_URL=postgresql://user:password@localhost:5432/adk?sslmode=disable
A2A_POSTGRES_MAX_CONNECTIONS=20
A2A_POSTGRES_IDLE_CONNECTIONS=5

# ============================================
# SAGE Security Settings (Optional)
# ============================================
SAGE_ENABLED=false

# Agent DID (Decentralized Identifier)
# Format: did:sage:<network>:<address>
SAGE_DID=

# Blockchain Network
# Options: ethereum | sepolia | kaia | kairos | local
SAGE_NETWORK=local

# ============================================
# Blockchain RPC Configuration
# ============================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ETHEREUM_CONTRACT_ADDRESS=
ETHEREUM_CHAIN_ID=1

# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
SEPOLIA_CONTRACT_ADDRESS=
SEPOLIA_CHAIN_ID=11155111

# Kaia Mainnet (Cypress)
KAIA_RPC_URL=https://public-en-cypress.klaytn.net
KAIA_CONTRACT_ADDRESS=
KAIA_CHAIN_ID=8217

# Kaia Testnet (Kairos)
KAIROS_RPC_URL=https://public-en-kairos.node.kaia.io
KAIROS_CONTRACT_ADDRESS=
KAIROS_CHAIN_ID=1001

# Local Development (Hardhat/Ganache)
LOCAL_RPC_URL=http://127.0.0.1:8545
LOCAL_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
LOCAL_CHAIN_ID=31337

# ============================================
# SAGE Private Key (NEVER commit to git!)
# ============================================
# Use EITHER private_key OR mnemonic, not both
SAGE_PRIVATE_KEY=
# SAGE_MNEMONIC=

# ============================================
# SAGE Security Features
# ============================================
SAGE_HANDSHAKE_ENABLED=true
SAGE_ENCRYPTION_ENABLED=true
SAGE_SIGNATURE_REQUIRED=true
SAGE_SESSION_MAX_AGE=1h
SAGE_SESSION_IDLE_TIMEOUT=10m
SAGE_NONCE_CACHE_SIZE=10000
SAGE_NONCE_CACHE_TTL=5m

# DID Cache
SAGE_DID_CACHE_ENABLED=true
SAGE_DID_CACHE_TTL=1h
SAGE_DID_CACHE_SIZE=1000

# ============================================
# LLM Provider Configuration
# ============================================

# LLM Provider Selection
# Options: openai | anthropic | gemini
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_TOP_P=1.0

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_VERSION=2023-06-01

# Google Gemini Configuration
GEMINI_API_KEY=
GEMINI_PROJECT_ID=
GEMINI_LOCATION=us-central1

# LLM Retry & Timeout
LLM_TIMEOUT=30s
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1s

# ============================================
# Logging Configuration
# ============================================
# Options: debug | info | warn | error
LOG_LEVEL=info

# Options: json | text
LOG_FORMAT=json

# Options: stdout | stderr | file
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/adk/agent.log

# ============================================
# Metrics & Monitoring
# ============================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# OpenTelemetry Tracing
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=sage-adk-agent

# ============================================
# Security & Authentication
# ============================================

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_MAX_AGE=3600

# API Authentication
AUTH_ENABLED=false
# Options: api_key | jwt | oauth2
AUTH_TYPE=api_key
AUTH_API_KEY=
AUTH_HEADER_NAME=X-API-Key

# JWT Authentication
JWT_SECRET=
JWT_ISSUER=sage-adk
JWT_AUDIENCE=sage-adk-agent
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
