# SAGE-Enabled Agent Example Environment Variables
# Copy this file to .env and configure your values

# ============================================================================
# Alice (Sender) Configuration
# ============================================================================

# Path to Alice's Ed25519 private key (JWK format)
# If not set, a temporary key will be generated
ALICE_KEY_PATH=/tmp/alice-key.json

# Alice's DID identifier
ALICE_DID=did:sage:alice

# ============================================================================
# Bob (Receiver) Configuration
# ============================================================================

# Path to Bob's Ed25519 private key (JWK format)
# If not set, a temporary key will be generated
BOB_KEY_PATH=/tmp/bob-key.json

# Bob's DID identifier
BOB_DID=did:sage:bob

# Bob's HTTP endpoint for receiving messages
BOB_ENDPOINT=http://localhost:18080/sage/message

# Port for Bob's HTTP server
BOB_PORT=18080

# ============================================================================
# SAGE Protocol Configuration
# ============================================================================

# Network identifier (local, testnet, mainnet)
SAGE_NETWORK=local

# Maximum clock skew tolerance for timestamp validation (in seconds)
# Default: 300 (5 minutes)
SAGE_MAX_CLOCK_SKEW=300

# Nonce cache size for replay attack protection
# Default: 10000
SAGE_NONCE_CACHE_SIZE=10000

# ============================================================================
# Network Configuration
# ============================================================================

# HTTP client timeout (in seconds)
HTTP_TIMEOUT=30

# Maximum idle connections
HTTP_MAX_IDLE_CONNS=100

# Maximum connections per host
HTTP_MAX_CONNS_PER_HOST=10

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable verbose logging for debugging
VERBOSE=false

# ============================================================================
# TLS/SSL Configuration (Production)
# ============================================================================

# Enable HTTPS for production deployments
# ENABLE_TLS=true
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem

# ============================================================================
# Advanced Configuration
# ============================================================================

# Custom message signing algorithm (default: Ed25519)
# SIGNATURE_ALGORITHM=Ed25519

# Enable message compression
# ENABLE_COMPRESSION=false

# Message size limit (in bytes)
# MAX_MESSAGE_SIZE=1048576
